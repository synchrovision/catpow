{
	"$schema": "../schema.json",
	"name": "Recipe",
	"label": "レシピ",
	"url": "https://schema.org/Recipe",
	"items": [
		{ "name": "name", "label": "名称", "required": true },
		{ "name": "url", "label": "URL", "input": "url" },
		{ "name": "image", "label": "画像", "input": "image", "required": true },
		{ "name": "video", "label": "動画", "@type": "VideoObject" },
		{ "name": "aggregateRating", "label": "評価", "@type": "AggregateRating" },
		{ "name": "review", "label": "レビュー", "@type": "Review" },
		{ "name": "cookTime", "label": "調理時間", "input": "datetime", "format": "H:i", "placeholder": "00:00" },
		{ "name": "prepTime", "label": "準備時間", "input": "datetime", "format": "H:i", "placeholder": "00:00" },
		{ "name": "totalTime", "label": "合計時間", "input": "datetime", "format": "H:i", "placeholder": "00:00" },
		{ "name": "dateCreated", "label": "公開日", "input": "datetime" },
		{ "name": "author", "label": "作成者", "@type": "Person" },
		{ "name": "description", "label": "概要", "input": "textarea" },
		{ "name": "keywords", "label": "キーワード", "input": "textarea" },
		{ "name": "recipeCategory", "label": "種類" },
		{ "name": "recipeCuisine", "label": "地域" },
		{ "name": "recipeIngredient", "label": "材料", "input": "textarea" },
		{ "name": "recipeYield", "label": "量", "input": "number", "unit": "人分" },
		{ "name": "recipeInstructions", "label": "調理方法", "input": "textarea" }
	]
}
